// Variables
@import 'variables'

// Reset
*
  margin 0
  padding 0
  box-sizing border-box

// Base
body
  font-family 'Microsoft JhengHei', '微軟正黑體', Arial, sans-serif
  color $text-color
  background-color $bg-color
  line-height 1.6

// Container
.container
  max-width 1200px
  margin 0 auto
  padding 2rem

h1
  color $primary-color
  margin-bottom 1rem
